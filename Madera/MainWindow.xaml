        <Label x:Name="label_2" Content="Label" HorizontalAlignment="Left" Margin="406,362,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lbl_error_login" Content="" HorizontalAlignment="Left" Margin="293,133,0,0" VerticalAlignment="Top" Height="24" Width="317" Foreground="#FFE00000" FontWeight="Bold"/>
        <Label x:Name="lbl_error_password" Content="" HorizontalAlignment="Left" Margin="293,188,0,0" VerticalAlignment="Top" Height="24" Width="285" Foreground="#FFE00000" FontWeight="Bold"/>
        <Label x:Name="lbl_login" Content="Login :" HorizontalAlignment="Left" Margin="243,158,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.063,0.572"/>
