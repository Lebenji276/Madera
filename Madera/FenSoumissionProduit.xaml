<Window x:Class="Madera.FenSoumissionProduit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Madera"
        mc:Ignorable="d" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Background.jpg"/>
        </Grid.Background>
        <Label Content="Soumettre un nouveau produit" HorizontalAlignment="Center" Margin="0,65,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <Button Content="Composant" HorizontalAlignment="Left" Margin="211,217,0,0" VerticalAlignment="Top" FontSize="18" Width="110" Height="35" Click="OpenComposant"/>
        <Button Content="Module" HorizontalAlignment="Left" Margin="359,217,0,0" VerticalAlignment="Top" FontSize="18" Width="110" Height="35" Click="OpenModule"/>
        <Button Content="Gamme" HorizontalAlignment="Left" Margin="498,217,0,0" VerticalAlignment="Top" FontSize="18" Width="110" Height="35" Click="OpenGamme"/>
        <Button x:Name="btnRetour" Content="Retour" HorizontalAlignment="Left" Margin="10,8,0,0" VerticalAlignment="Top" Background="#FFB8B8B8" Click="btnRetour_Click" Cursor="Hand"/>

    </Grid>
</Window>
