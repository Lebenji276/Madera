        <TextBox x:Name="Detail_module_value_Description" HorizontalAlignment="Left" Margin="152,91,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top" Width="203" HorizontalContentAlignment="Center"/>
