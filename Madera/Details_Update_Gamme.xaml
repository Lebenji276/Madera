        <Button Content="Fermer" HorizontalAlignment="Left" Margin="220,319,0,0" VerticalAlignment="Top" Width="100" Click="ClickQuit"/>
        <Button Content="Modifier" HorizontalAlignment="Left" Margin="88,319,0,0" VerticalAlignment="Top" Width="100" Click="ClickModify" Cursor="Hand"/>
